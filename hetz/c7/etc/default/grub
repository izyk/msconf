GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="nomodeset rd.auto=1 crashkernel=auto mtrr_spare_reg_nr=0 mtrr_gran_size=64K mtrr_chunk_size=64M"
GRUB_DISABLE_RECOVERY="true"
